<div class="heading">
  <div class="heading-text">メモアプリ</div>
</div>
<div>
  <form class="form" method="post" action="/memos/<%= params[:id] %>">
    <input type="hidden" name="_method" value="PATCH">
    <input class="memo-title-field" type="text" name="title" value="<%= @memo[:title] %>">
    <textarea class="memo-body-field" name="body"><%= @memo[:body] %></textarea>
    <input class="btn input-btn" type="submit" value="変更">
  </form>
</div>
